<script>
    // Ensure fresh book ID on each page load
    let ID = '<%= book.id %>';
    console.log('Book page loaded - ID:', ID, 'Book:', '<%= book.name %>');

    // Add modern button styles and animations
    const style = document.createElement('style');
    style.textContent = `
        .modern-cart-btn:hover {
            background-color: #e68a00 !important;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 153, 0, 0.4) !important;
        }

        .modern-cart-btn:active {
            transform: translateY(0px);
            box-shadow: 0 2px 8px rgba(255, 153, 0, 0.3) !important;
        }

        .modern-cart-btn:hover .cart-icon {
            transform: scale(1.1);
        }

        .modern-cart-btn:disabled {
            background-color: #cc7a00 !important;
            opacity: 0.7;
            transform: none !important;
            cursor: not-allowed;
        }

        /* Enhanced Out of Stock Toast Styling */
        #out-of-stock-toast-id {
            animation: outOfStockPulse 0.6s ease-in-out;
            border: 2px solid rgba(255, 255, 255, 0.3) !important;
        }

        @keyframes outOfStockPulse {
            0% {
                transform: translate(-50%, -50%) scale(0.8);
                opacity: 0;
            }
            50% {
                transform: translate(-50%, -50%) scale(1.05);
            }
            100% {
                transform: translate(-50%, -50%) scale(1);
                opacity: 1;
            }
        }

        #out-of-stock-toast-id .bi-exclamation-triangle-fill {
            animation: warningBounce 2s infinite;
        }

        @keyframes warningBounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-5px); }
        }

        /* Add backdrop blur effect */
        #out-of-stock-toast-id.show {
            backdrop-filter: blur(2px);
        }

        /* Out of Stock Button Animation */
        @keyframes outOfStockGlow {
            0% {
                box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
            }
            100% {
                box-shadow: 0 4px 20px rgba(220, 53, 69, 0.6), 0 0 20px rgba(220, 53, 69, 0.4);
            }
        }

        .out-of-stock-btn:hover {
            background: linear-gradient(45deg, #dc3545, #c82333) !important;
            transform: none !important;
        }
    `;
    document.head.appendChild(style);

    // Quantity selector functionality - REMOVED (quantity control only in cart)
    
    function makePUTrequest(event) {
        // Get the actual button element (might be clicked on child elements)
        const button = event.target.closest('.modern-cart-btn');
        const buttonBookId = button.getAttribute('data-book-id');
        const currentID = buttonBookId || '<%= book.id %>';
        
        console.log('üõí Adding to cart - Book ID:', currentID, 'Quantity: 1');
        
        // Simply disable button to prevent double clicks
        button.disabled = true;
        
        // Function to restore button
        function restoreButton() {
            button.disabled = false;
        }
        
        $.ajax({
            url: `/cart/${currentID}`,
            type: 'POST',
            data: { quantity: 1 },
            success: function(response) {
                console.log('‚úÖ Item added successfully');
                var successToast = document.getElementById('add-to-cart-success-toast-id');
                if (successToast) {
                    var toast = new bootstrap.Toast(successToast, {
                        autohide: true,
                        delay: 3000
                    });
                    toast.show();
                }
                restoreButton();
            },
            error: function(xhr, status, error) {
                console.log('‚ùå Error occurred:', xhr.status, error);
                console.log('‚ùå Response Text:', xhr.responseText);
                
                if (xhr.status === 409) {
                    console.log('‚ö†Ô∏è Item already in cart');
                    var errorToast = document.getElementById('add-to-cart-error-toast-id');
                    if (errorToast) {
                        var toast = new bootstrap.Toast(errorToast, {
                            autohide: true,
                            delay: 4000
                        });
                        toast.show();
                    }
                } else if (xhr.status === 400) {
                    console.log('‚ùå Stock error');
                    try {
                        const errorData = JSON.parse(xhr.responseText);
                        console.log('‚ùå Error data:', errorData);
                        // Show out of stock toast instead of alert
                        var outOfStockToast = document.getElementById('out-of-stock-toast-id');
                        if (outOfStockToast) {
                            var toast = new bootstrap.Toast(outOfStockToast, {
                                autohide: true,
                                delay: 5000
                            });
                            toast.show();
                        }
                    } catch (e) {
                        console.log('‚ùå Error parsing response:', e);
                        // Show out of stock toast instead of alert
                        var outOfStockToast = document.getElementById('out-of-stock-toast-id');
                        if (outOfStockToast) {
                            var toast = new bootstrap.Toast(outOfStockToast, {
                                autohide: true,
                                delay: 5000
                            });
                            toast.show();
                        }
                    }
                } else if (xhr.status === 401) {
                    console.log('‚ùå Authentication error');
                    alert('Please log in to add items to cart.');
                    window.location.href = '/login';
                } else {
                    console.log('‚ùå Unexpected error:', xhr.status, error);
                    console.log('‚ùå Full response:', xhr);
                    alert('An error occurred. Please try again. Status: ' + xhr.status);
                }
                
                restoreButton();
            }
        });
    }
</script>


