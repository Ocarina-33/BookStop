<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-3 col-md-4">
            <!-- User Profile Card -->
            <div class="card shadow border-0 mt-3">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-4">
                            <img class="circular shadow-sm" src="<%= user && user.image ? user.image : '/images/propic.jpg' %>" width="60" height="60" alt="Profile Picture">
                        </div>
                        <div class="col-8">
                            <p class="text-muted mb-1">Welcome back,</p>
                            <h5 class="mb-0 fw-bold"><%=user.name%></h5>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Navigation Menu -->
            <div class="card shadow border-0 mt-3">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="/My-section/profile" class="list-group-item list-group-item-action border-0 fw-semibold">
                            <i class="bi bi-person-circle me-3"></i>My Account
                        </a>
                        <a href="/My-section/orders" class="list-group-item list-group-item-action border-0 fw-semibold">
                            <i class="bi bi-bag-check me-3"></i>My Orders
                        </a>
                        <a href="/My-section/wishlist" class="list-group-item list-group-item-action border-0 fw-semibold">
                            <i class="bi bi-heart me-3"></i>My Wishlist
                        </a>
                        <a href="/My-section/reviews" class="list-group-item list-group-item-action border-0 fw-semibold">
                            <i class="bi bi-star me-3"></i>My Reviews
                        </a>
                        <a href="/my-section/notifications" class="list-group-item list-group-item-action active border-0 fw-semibold">
                            <i class="bi bi-bell me-3"></i>Notifications
                            <% if (unreadCount > 0) { %>
                                <span class="badge bg-danger rounded-pill float-end"><%= unreadCount %></span>
                            <% } %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-9 col-md-8">
            <!-- Header Section -->
            <div class="card shadow border-0 mt-3">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-bell-fill text-primary me-3 fs-4"></i>
                                <div>
                                    <h3 class="mb-1">Notifications</h3>
                                    <p class="text-muted mb-0">Stay updated with your latest activities</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex gap-2 justify-content-end">
                                <% if (unreadCount > 0) { %>
                                    <button class="btn btn-outline-primary btn-sm" onclick="markAllAsRead()">
                                        <i class="bi bi-check2-all me-1"></i>Mark All Read
                                    </button>
                                <% } %>
                                <span class="badge bg-primary fs-6">
                                    <%= unreadCount %> unread
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Available Vouchers Section -->
            <% if (availableVouchers.length > 0) { %>
                <div class="card shadow border-0 mt-3">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-gift text-success me-2"></i>Your Available Vouchers
                        </h5>
                        <div class="row">
                            <% availableVouchers.forEach(voucher => { %>
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card border-success">
                                        <div class="card-body text-center">
                                            <div class="mb-2">
                                                <i class="bi bi-gift-fill text-success fs-2"></i>
                                            </div>
                                            <h6 class="card-title text-success"><%= voucher.name %></h6>
                                            <p class="card-text">
                                                <strong>৳<%= voucher.discount %></strong> off<br>
                                                <small class="text-muted">
                                                    Max discount: ৳<%= voucher.cap %>
                                                </small>
                                            </p>
                                            <% if (voucher.validity) { %>
                                                <small class="text-muted">
                                                    Valid until: <%= new Date(voucher.validity).toLocaleDateString() %>
                                                </small>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Notifications List -->
            <div class="card shadow border-0 mt-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">Recent Notifications</h5>
                    
                    <% if (notifications.length === 0) { %>
                        <div class="text-center py-5">
                            <i class="bi bi-bell-slash display-1 text-muted mb-3"></i>
                            <h4 class="text-muted">No notifications yet</h4>
                            <p class="text-muted">You'll see your notifications here when you receive them</p>
                        </div>
                    <% } else { %>
                        <div class="list-group list-group-flush">
                            <% notifications.forEach(notification => { %>
                                <div class="list-group-item list-group-item-action <%= !notification.is_read ? 'border-start border-primary border-3' : '' %> notification-item" 
                                     data-id="<%= notification.id %>" style="cursor: pointer;">
                                    <div class="d-flex w-100 justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center mb-1">
                                                <% if (notification.type === 'voucher') { %>
                                                    <i class="bi bi-gift-fill text-success me-2"></i>
                                                <% } else if (notification.type === 'welcome') { %>
                                                    <i class="bi bi-hand-thumbs-up-fill text-primary me-2"></i>
                                                <% } else if (notification.type === 'order') { %>
                                                    <i class="bi bi-bag-check-fill text-warning me-2"></i>
                                                <% } else { %>
                                                    <i class="bi bi-info-circle-fill text-info me-2"></i>
                                                <% } %>
                                                <h6 class="mb-0 <%= !notification.is_read ? 'fw-bold' : '' %>">
                                                    <%= notification.title %>
                                                </h6>
                                                <% if (!notification.is_read) { %>
                                                    <span class="badge bg-primary ms-2">New</span>
                                                <% } %>
                                            </div>
                                            <p class="mb-1 text-muted"><%= notification.message %></p>
                                            <% if (notification.voucher_name) { %>
                                                <div class="mt-2">
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-gift me-1"></i>
                                                        <%= notification.voucher_name %> - ৳<%= notification.voucher_discount %> off
                                                    </span>
                                                </div>
                                            <% } %>
                                        </div>
                                        <div class="d-flex flex-column align-items-end">
                                            <small class="text-muted">
                                                <%= new Date(notification.created_at).toLocaleDateString() %>
                                            </small>
                                            <small class="text-muted">
                                                <%= new Date(notification.created_at).toLocaleTimeString() %>
                                            </small>
                                            <button class="btn btn-sm btn-outline-danger mt-2" onclick="deleteNotification(<%= notification.id %>)" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>

                        <!-- Pagination -->
                        <% if (hasMore || currentPage > 1) { %>
                            <div class="d-flex justify-content-center mt-4">
                                <nav aria-label="Notifications pagination">
                                    <ul class="pagination">
                                        <% if (currentPage > 1) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="/My-section/notifications?page=<%= currentPage - 1 %>">Previous</a>
                                            </li>
                                        <% } %>
                                        <li class="page-item active">
                                            <span class="page-link"><%= currentPage %></span>
                                        </li>
                                        <% if (hasMore) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="/My-section/notifications?page=<%= currentPage + 1 %>">Next</a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Mark notification as read when clicked
document.querySelectorAll('.notification-item').forEach(item => {
    item.addEventListener('click', function() {
        const notificationId = this.dataset.id;
        const isRead = !this.classList.contains('border-primary');
        
        if (!isRead) {
            markAsRead(notificationId, this);
        }
    });
});

// Mark single notification as read
function markAsRead(notificationId, element) {
    fetch(`/My-section/notifications/mark-read/${notificationId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            element.classList.remove('border-primary', 'border-3');
            const badge = element.querySelector('.badge.bg-primary');
            if (badge) badge.remove();
            const title = element.querySelector('h6');
            if (title) title.classList.remove('fw-bold');
            updateUnreadCount();
        }
    })
    .catch(error => console.error('Error:', error));
}

// Mark all notifications as read
function markAllAsRead() {
    fetch('/My-section/notifications/mark-all-read', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        }
    })
    .catch(error => console.error('Error:', error));
}

// Delete notification
function deleteNotification(notificationId) {
    if (confirm('Are you sure you want to delete this notification?')) {
        fetch(`/My-section/notifications/${notificationId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            }
        })
        .catch(error => console.error('Error:', error));
    }
}

// Update unread count in navbar (if exists)
function updateUnreadCount() {
    // Use the global function from session-manager.js if available
    if (window.updateNotificationCount) {
        window.updateNotificationCount();
    } else {
        // Fallback to local implementation
        fetch('/My-section/notifications/unread-count')
        .then(response => response.json())
        .then(data => {
            const badge = document.querySelector('#notification-badge');
            if (badge) {
                if (data.count > 0) {
                    badge.textContent = data.count;
                    badge.style.display = 'inline-block';
                } else {
                    badge.style.display = 'none';
                }
            }
        })
        .catch(error => console.error('Error:', error));
    }
}
</script>

<style>
.notification-item:hover {
    background-color: #f8f9fa;
}

.circular {
    border-radius: 50%;
    object-fit: cover;
}

.list-group-item.active {
    background-color: #007bff;
    border-color: #007bff;
}

.border-start {
    border-left-width: 3px !important;
}
</style>
