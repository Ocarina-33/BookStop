<div class="dropdown position-relative">
    <button class="btn btn-light dropdown-toggle border d-flex align-items-center justify-content-center" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        <img class="rounded-circle me-2" src="<%=user.image%>" width="36px">
        <%=user.name%>
    </button>
    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="/my-section/profile">My Account</a></li>
        <li><a class="dropdown-item" href="/my-section/orders">My Orders</a></li>
        <li><a class="dropdown-item" href="/my-section/wishlist">My Wishlist</a></li>
        <li><a class="dropdown-item" href="/my-section/reviews">My Rating Reviews</a></li>
        <li><a class="dropdown-item" href="/my-section/notifications">
            <i class="bi bi-bell me-2"></i>Notifications
            <% if (typeof unreadCount !== 'undefined' && unreadCount > 0) { %>
                <span class="badge bg-primary ms-2" id="notification-badge"><%= unreadCount %></span>
            <% } else { %>
                <span class="badge bg-primary ms-2" id="notification-badge" style="display: none;">0</span>
            <% } %>
        </a></li>
        <li><hr class="dropdown-divider"></li>
        <li>
            <form action="/logout" method="POST" class="my-logout-form">
                <input type="submit" value="Sign Out" class="btn my-non-btn">
            </form>
        </li>
    </ul>
</div>
