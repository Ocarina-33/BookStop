<!-- User Statistics Modal -->
<div class="modal fade" id="userStatsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User Statistics</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="userStatsContent">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Toggle all users checkbox
function toggleAllUsers() {
    const selectAll = document.getElementById('selectAll');
    const userCheckboxes = document.querySelectorAll('.user-checkbox');
    
    userCheckboxes.forEach(checkbox => {
        checkbox.checked = selectAll.checked;
    });
}

// Select users by criteria
function selectUsers(criteria) {
    // First uncheck all
    document.querySelectorAll('.user-checkbox').forEach(cb => cb.checked = false);
    document.getElementById('selectAll').checked = false;
    
    if (criteria === 'all') {
        document.getElementById('selectAll').checked = true;
        toggleAllUsers();
        return;
    }
    
    // Fetch filtered users
    fetch(`/admin/notifications/api/users?criteria=${criteria}`)
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            data.users.forEach(user => {
                const checkbox = document.getElementById(`user${user.id}`);
                if (checkbox) checkbox.checked = true;
            });
        }
    })
    .catch(error => console.error('Error:', error));
}

// Show user statistics
function showUserStats() {
    const modal = new bootstrap.Modal(document.getElementById('userStatsModal'));
    modal.show();
    
    // Load user statistics
    fetch('/admin/notifications/api/users')
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            const totalUsers = data.users.length;
            const firstTimeUsers = data.users.filter(u => (u.total_orders || 0) === 0).length;
            const regularUsers = data.users.filter(u => (u.total_orders || 0) > 0).length;
            const highValueUsers = data.users.filter(u => parseFloat(u.total_spent || 0) > 1000).length;
            
            document.getElementById('userStatsContent').innerHTML = `
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="card border-primary">
                            <div class="card-body">
                                <h3 class="text-primary">${totalUsers}</h3>
                                <p class="text-muted mb-0">Total Users</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-info">
                            <div class="card-body">
                                <h3 class="text-info">${firstTimeUsers}</h3>
                                <p class="text-muted mb-0">First-time Users</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-warning">
                            <div class="card-body">
                                <h3 class="text-warning">${regularUsers}</h3>
                                <p class="text-muted mb-0">Regular Users</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-success">
                            <div class="card-body">
                                <h3 class="text-success">${highValueUsers}</h3>
                                <p class="text-muted mb-0">High Value Users</p>
                                <small class="text-muted">(>à§³1000 spent)</small>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }
    })
    .catch(error => {
        document.getElementById('userStatsContent').innerHTML = `
            <div class="alert alert-danger">
                Error loading user statistics: ${error.message}
            </div>
        `;
    });
}

// Refresh statistics
function refreshStats() {
    location.reload();
}

// Auto-dismiss alerts after 5 seconds
setTimeout(() => {
    document.querySelectorAll('.alert-dismissible').forEach(alert => {
        const bsAlert = new bootstrap.Alert(alert);
        bsAlert.close();
    });
}, 5000);
</script>

