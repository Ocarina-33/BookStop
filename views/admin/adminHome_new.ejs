                                            <% cancelledOrders.forEach(order => { %>
                                            <tr>
                                                <td>#<%=order.id%></td>
                                                <td><%=order.customer_name%></td>
                                                <td>à§³<%=order.total_amount%></td>
                                                <td><small><%=new Date(order.updated_at).toLocaleDateString()%></small></td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } else { %>
                                <div class="text-center text-muted py-4">
                                    <i class="bi bi-check-circle fs-1 text-success"></i>
                                    <p class="mt-2">No recent cancellations</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Yearly Chart -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-transparent border-0">
                            <h5 class="mb-0"><i class="bi bi-calendar3 me-2"></i>Yearly Earnings Overview</h5>
                        </div>
                        <div class="card-body">
                            <div id="curve_chart2" style="min-height: 400px;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart Scripts -->
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    let monthlyEarnings = <%- JSON.stringify(monthlyEarnings) %>;
    let monthlyData = [];
    monthlyData.push(['Date','Earnings (à§³)']);
    for(let i=0;i<monthlyEarnings.length;i++){
        let smallData = [monthlyEarnings[i].month+" "+ monthlyEarnings[i].day, parseInt(monthlyEarnings[i].total_earned)];
        monthlyData.push(smallData);
    }

    let yearlyEarnings = <%- JSON.stringify(yearlyEarnings) %>;
    let yearlyData = [];
    yearlyData.push(['Month','Earnings (à§³)']);
    for(let i=0;i<yearlyEarnings.length;i++){
        let smallData = [yearlyEarnings[i].month, parseInt(yearlyEarnings[i].total_earned)];
        yearlyData.push(smallData);
    }

    google.charts.load('current', {'packages':['corechart']});
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {
        var data = google.visualization.arrayToDataTable(monthlyData);
        var data2 = google.visualization.arrayToDataTable(yearlyData);
        
        var options = {
            curveType: 'function',
            legend: { position: 'bottom' },
            backgroundColor: 'transparent',
            colors: ['#28a745'],
            hAxis: {
                titleTextStyle: {color: '#333'},
                textStyle: {color: '#666'}
            },
            vAxis: {
                titleTextStyle: {color: '#333'},
                textStyle: {color: '#666'},
                format: 'à§³#,###'
            }
        };

        var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));
        var chart2 = new google.visualization.LineChart(document.getElementById('curve_chart2'));

        chart.draw(data, options);
        chart2.draw(data2, options);
    }
</script>
